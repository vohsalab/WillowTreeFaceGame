<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.ibalashov.willowtreefacegame.LoginActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_button_text"
        android:id="@+id/enterNameButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterNameView"
        android:layout_above="@+id/enterNameButton"
        android:layout_centerHorizontal="true"
        android:inputType="textCapSentences"
        android:hint="@string/enter_your_name_hint"/>

</RelativeLayout>
